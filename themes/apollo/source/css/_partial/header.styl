#header
  display: block
  margin: 4em 0
  position: relative
  *zoom: 1
  &:after
    display: block
    visibility: hidden
    font-size: 0
    height: 0
    clear: both
    content: "."

.blog-title
  float: left
  display: inline-block
  font-size: 120%
  font-weight: bold
  padding-bottom: .2em
  letter-spacing: .2em
  margin: 10px 0
  border-bottom: 5px solid color-title
  &:hover
    border-color: color-link
    a
      color: color-link
  a
    position: relative
    left: .1em
    padding: .4em 0

.mobile-nav-panel
  display: none
  padding: 15px 0 0
  .icon-reorder
    cursor: pointer
    display: inline-block
    width: 18px
    height: 17px
    background: url('/images/icon-reorder@2x.png') no-repeat 0 0
    background-size: 18px 17px

.nav
  margin: 10px 0
  font-size: 85%
  text-transform: uppercase
  float: right
  position: relative
  ul
    display: block
    *zoom: 1
    margin: 0
    padding: 0
    &:after
      display: block
      visibility: hidden
      font-size: 0
      height: 0;
      clear: both
      content: "."
  li
    float: left
    margin: .3em 0 .3em 2em
    img
      vertical-align: middle

  a
    font-weight: bold
    color: color-default
    &:hover
      color: color-link

.nav-icon
  font-family: font-icon
  text-align: center
  font-size: font-size
  width: font-size
  height: font-size
  padding: 20px 8px
  position: relative
  cursor: pointer

#nav-rss-link
  &:before
    content: "\f09e"
