#header
  display: block
  margin: 4em 0
  position: relative
  *zoom: 1
  &:after
    display: block
    visibility: hidden
    font-size: 0
    height: 0
    clear: both
    content: "."

.blog-title
  float: left
  display: inline-block
  font-size: 120%
  font-weight: bold
  padding-bottom: .2em
  letter-spacing: .2em
  margin: 10px 0
  border-bottom: 5px solid color-title
  &:hover
    border-color: color-link
    a
      color: color-link
  a
    position: relative
    left: .1em
    padding: .4em 0
