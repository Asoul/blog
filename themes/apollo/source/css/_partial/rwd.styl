// tablet
@media (min-width:768px) and (max-width:1040px)
  #container
    width: 700px

  #main
    padding-left: 0

  .entry-meta-header
    position: static
    margin-bottom: 1em
    width: auto
    .meta-elements
      display: inline
      margin-right: 1em
    .commentscount
      display: none

  .post
    font-size: 100%
    .entry-title
      font-size: 180%
    .entry-content pre
      white-space: pre-wrap
      word-wrap: break-word
      word-break: break-all
      overflow-x: hidden

// Mobile
@media (max-width:767px)
  #container
    width: 93.75%
    padding-right: 0
    word-wrap: break-word

  #header
    margin: 2em 0 4em 0
    text-align: center
    position: static

  .blog-title
    float: none

  #main
    padding-left: 0
    margin-bottom: 3em
    width: 100%

  .entry-meta-header
    position: static
    margin-bottom: 1em
    width: auto
    .meta-elements
      display: inline
      margin-right: 1em
    .commentscount
      display: none

  .post
    font-size: 90%
    .entry-title
      font-size: 180%
    .entry-content
      line-height: 1.8
      blockquote
        margin: 1em 0
      table th, table td
        word-break: break-all
      iframe
        width: 100% !important

  .pagenation span,.pagenation a
    padding: 5px
    margin: 0

  
