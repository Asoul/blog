.site-wrapper
  position: relative
  z-index: 10
  min-height: 100%
  background: #fff
  -webkit-transition: -webkit-transform 0.4s cubic-bezier(.94,.06,.32,.95)
  transition: transform 0.4s cubic-bezier(.94,.06,.32,.95)

html.nav-opened .site-wrapper
  overflow-x: hidden
  -webkit-transform: translate3D(-240px, 0, 0)
  -ms-transform: translate3D(-240px, 0, 0)
  transform: translate3D(-240px, 0, 0)
  -webkit-transition: -webkit-transform 0.4s cubic-bezier(.94,.06,.32,.95)
  transition: transform 0.4s cubic-bezier(.94,.06,.32,.95)
